extends layout
block style 
    link(rel="stylesheet", href="/stylesheets/style.css")
block script_foot
    script(src="/javascripts/users.js")
block content
    #modalConnect.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalCenterTitle' aria-hidden='true')
        .modal-dialog.modal-dialog-centered(role='document')
            .modal-content
                .modal-body.text-center
                    i(class="fas fa-spinner fa-spin")
                    =" "
                    label(class="font-weight-bold")="Connect to user, please wait..." 

    .basepage.card.border-primary
        .tab
            .chat-list
                .card-header.h-10
                    .chat-list-header.card-title
                        ="Chats"
                .search-box 
                    input(class="form-control form-control-sm" placeholder="Search")
                .chat-list-items
                    each val in contact
                        a(class="chat-list-subitems contact" data-tag=val.tags href="javascript:void(0)")
                            .px-3.py-2
                                .subitems
                                    img(src='https://fastly.picsum.photos/id/230/200/200.jpg?hmac=8tI9ISupCMivMI7f7Q6i24FcYAg812XUEYJFZtaXp_8' alt='')
                                    div
                                        label(class="label-contact")=val.fullname
                                        span(class="last-chat")=val.tags
            .chat-view
                .card-header.h-10
                    #user_name.chat-list-header.card-title
                        if !user
                            ="Anonymous"
                        else 
                            =user
                    input(type="hidden" id="mytags" value=`${mytag}`)
                .card-body
                    #chats.chat-box(style='height: 300px;')
                form#form_send
                    .input-group
                        input#message.form-control(type='text' style='border-radius: 0px;')
                        .input-group-append
                            button.btn.btn-success(type='submit' style='border-radius: 0px;') Send